! ----esc----
! keycode 100 = Escape
keysym Henkan_Mode = Escape

! ----ctrl----
remove lock = Caps_Lock
keysym Caps_Lock = Control_L
keysym Scroll_Lock = Caps_Lock
keysym Print = Insert
add lock = Caps_Lock
add Control = Control_L

! ----mod3----
clear mod3
remove mod1 = Alt_R
keysym Muhenkan = Alt_R
keysym Hiragana_Katakana = Alt_R
add mod3 = Alt_R
